
<table class="table table-hover" style="margin-top: 30px;">
  <thead>
    <tr>
      <th>Employee Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Department</th>
      <th>Position</th>
      <th>Email</th>
      <th colspan="2" style="text-align: center;">Action</th>
    </tr>
  </thead>
  <tbody>
      <% if (data.length){%> 

        <% data.forEach(emp => { %>
          <tr>
           <td> <%=emp.emp_id%> </td>
           <td> <%=emp.f_name%> </td>
           <td> <%=emp.l_name%> </td>
           <td> <%=emp.department%> </td>
           <td> <%=emp.position%> </td>
           <td> <%=emp.email%> </td>
           <td> <a href="/salaries/sal-info/<%=emp.emp_id%> "> Add Salary Details </a> </td>
           <% if( emp.department = 'Accounts') { %> 
           <td> <a href="/salaries/payslip/<%=emp.emp_id%> "> Generate Payslip </a> </td>
           <% } %> 
          </tr>
        <% }) %>

      <% }else{ %> 
        <tr><td colspan="7" style="text-align: center;">No Employee Records entered</td></tr>
      <% } %> 
  </tbody>
</table>

