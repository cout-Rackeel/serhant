<div class="total-cont" style="width: 600px; margin:50px auto; border: 0.1px solid lightgray; padding: 30px; border-radius: 2px;">
  <h2 class="form-title mb-4 pb-3" style="border-bottom: 0.1px solid lightgray ;">Login Form</h2>
  <div class="form-cont">
    <form action="/login/authlogin" method="post">
      
      <div class="formControl mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control">
      </div>
  
  
        <div class="formControl mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" id="password" class="form-control">
        </div>
  
  
      <div class="btn-cont">
          <button class="btn" style="background-color:#ffe600; color: #333;">Send</button>
      </div>
    </form>
  </div>
</div>

<div class="message">
  <% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
     <p style="color:green"><%- messages.success %></p>
<% } %>
</div>

